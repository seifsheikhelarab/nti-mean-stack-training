<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Movie App</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
      }
      form {
        margin: 50px auto;
        width: 400px;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }
      input[type="text"] {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
      }
      button[type="submit"] {
        background-color: #4caf50;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
      }
      .movie {
        margin-top: 20px;
        display: flex;
        border: 1px solid #ccc;
        padding: 20px;
        border-radius: 5px;
      }
      .movie img {
        width: 100px;
        height: 150px;
        margin-right: 20px;
      }
      .movie .info {
        flex: 1;
      }
      .movie .info h2 {
        margin-bottom: 10px;
      }
      .movie .info ul {
        list-style: none;
        padding: 0;
        margin: 0;
      }
      .movie .info li {
        margin-bottom: 5px;
      }
    </style>
  </head>
  <body>
    <form action="/search" method="get">
      <input
        type="text"
        name="term"
        id="term"
        placeholder="Search for movies"
      />
      <button type="submit">Search</button>
    </form>

    <% movies.forEach(movie => { %>
    <div class="movie">
      <img src="<%= movie.thumbnail %>" />
      <div class="info">
        <h2><%= movie.title %></h2>
        <p><%= movie.year %></p>
        <p>Cast</p>
        <ul>
          <% movie.cast.forEach(member => { %>
          <li><%= member %></li>
          <% }) %>
        </ul>
        <p>Genres</p>
        <ul>
          <% movie.genres.forEach(genre => { %>
          <li><%= genre %></li>
          <% }) %>
        </ul>
        <p><%= movie.extract %></p>
      </div>
    </div>
    <% }) %>
  </body>
</html>

